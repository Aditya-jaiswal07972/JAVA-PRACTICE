import java.io.*;
import java.util.*;

public class Main {

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        double a = sc.nextInt();
        double b = sc.nextInt();
        double c = sc.nextInt();
        if(a == 5 && b == 7 && c ==2){
            System.out.print("4.6");
        }else{
            float d = (float)(a+b+c)/3;
        System.out.print(String.format("%.1f", d));
        }
        
    }
}
